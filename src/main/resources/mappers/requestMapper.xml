<?xml version="1.0" encoding="UTF-8"?>
<!-- Mapping 설정은 root-context 에서 mybatis property 추가할 것-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.soomgo.soomgo_project.mappers.RequestMapper">
    <insert id="insert" parameterType="RequestVO">
        <selectKey order="AFTER" keyProperty="id" resultType="int">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into test (writer, ref)
        values (#{writer}, #{ref})
    </insert>

    <select id="select" resultType="RequestVO">
        select * from test where id = #{id}
    </select>

    <select id="getList" resultType="RequestVO">
        select * from test where id > 0 order by id desc
    </select>
</mapper>