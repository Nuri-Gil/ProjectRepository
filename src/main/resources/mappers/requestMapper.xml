<?xml version="1.0" encoding="UTF-8"?>
<!-- Mapping 설정은 root-context 에서 mybatis property 추가할 것-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.soomgo.soomgo_project.mappers.RequestMapper">
    <insert id="insert" parameterType="RequestVO">
       <selectKey order="AFTER" keyProperty="id" resultType="int">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into test (req_id, req_newbie, req_regDate, req_sub)
        values (#{id}, #{newbie}, #{regDate}, #{sub})
    </insert>

    <select id="selectById" resultType="RequestVO">
        select * from test where req_id = #{id}
    </select>
</mapper>